{
  "name": "ort-fossology-compliance",
  "version": "0.1.0",
  "description": "Automated ORT + Fossology compliance scanner (offline-first) with CLI/API orchestration.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"{src,tests}/**/*.{ts,tsx,js,json,md}\"",
    "test": "jest --coverage && npm run test:fossology",
    "test:fossology": "node scripts/test-fossology-upload.js",
    "prescan": "npm run build",
    "scan": "node dist/cli/scan.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "form-data": "^4.0.5",
    "form-data-encoder": "^4.1.0",
    "formdata-node": "^6.0.3",
    "node-fetch": "^3.3.2",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.6.3"
  }
}
