{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@models/inno/*": ["models/inno/*"],
      "@services/*": ["services/*"],
      "@services/inno/*": ["services/inno/*"],
      "@cli/*": ["cli/*"],
      "@lib/*": ["lib/*"],
      "@sbom/*": ["lib/sbom/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "tests"]
}
