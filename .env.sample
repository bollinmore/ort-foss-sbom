###############################################
# ORT + Fossology real integration settings
# Copy this file to .env and adjust values.
###############################################

# Set to "live" to call real ORT CLI + Fossology REST; default "fixture" keeps offline stubs.
INTEGRATION_MODE=fixture

# Absolute or PATH-resolved ORT CLI executable (only used when INTEGRATION_MODE=live).
#ORT_CLI_PATH=ort
# Optional: ORT log level (info|debug). debug may include stacktraces if ORT_STACKTRACE=1.
#ORT_LOG_LEVEL=info
#ORT_STACKTRACE=0

# Base output directory for artifacts (SBOM, reports, ORT logs). Defaults to ./out
#OUTPUT_DIR=./out

# Fossology REST settings (only used when FOSSOLOGY_MODE=live).
FOSSOLOGY_MODE=stub
#FOSSOLOGY_API_URL=http://127.0.0.1:8081
#FOSSOLOGY_TOKEN=replace-with-token
#FOSSOLOGY_FOLDER_ID=1
# Poll interval (seconds) when waiting for Fossology results.
#FOSSOLOGY_POLL_SECONDS=5
# Max artifact size in bytes (upload will fail fast if exceeded). Default 500MB.
#MAX_ARTIFACT_SIZE_BYTES=524288000

# Test-only: force a simulated license risk for pipelines/fixtures.
#SIMULATE_RISK=0
